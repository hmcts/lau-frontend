{% from "govuk/components/button/macro.njk" import govukButton %}
<div id="timeout-modal-container" class="modal" hidden>
  <div #outerContainer id="timeout-modal" class="modal-content govuk-width-container clearfix" tabindex="0">
    <h1 class="govuk-heading-l">You are about to be logged out</h1>
    <p class="govuk-body">You are about to be signed out of your application in <span id="countdown-timer"
                                                   data-minutes="{{ timeout.minutes }}"
                                                   data-seconds="{{ timeout.seconds }}"
                                                   data-default="{{ timeout.twoMinutes }}"> {{ timeout.twoMinutes }} </span>{{ timeout.part2 }}</p>
    <div class="govuk-form-group">
      {{ govukButton({
            text: 'Continue with your application',
            attributes: { id: 'timeout-modal-close-button' }
      }) }}
      <p class="govuk-body">
        <a id="timeout-signout-link" href="/logout" class="govuk-link">Logout</a>
      </p>
    </div>
  </div>
</div>
