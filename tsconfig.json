{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "es2022",
      "es2022.object",
      "dom"
    ],
    "baseUrl": "src/main",
    "paths": {
      "router/*": [
        "router/*"
      ],
      "routes/*": [
        "routes/*"
      ]
    },
    "typeRoots": [
      "./src/main/types",
      "./node_modules/@types",
      "./src/test"
    ],
    "types": ["jest", "node", "express"]
  }
}
